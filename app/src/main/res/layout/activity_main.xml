                android:textSize="24sp" />

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:backgroundTint="#EEEEEE"
                android:text="+"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button15"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:backgroundTint="#EEEEEE"
                android:text="="
                android:textColor="#000000"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>

